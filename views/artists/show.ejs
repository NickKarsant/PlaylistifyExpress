<% layout('layouts/boilerplate') %>

<div class="row">
  <%- include('../partials/aside') %>

  <div class="col-xs-10 col-sm-10 col-md-9 col-lg-10">


    <div id="artistImage" class="row mt-3 mb-3" >
      <img class="col-xs-3 col-sm-3 col-md-3 col-lg-3" src="<%= artist.image%>" alt="">
      <h1 class="col-xs-9 col-sm-9 col-md-9 col-lg-9"
        style="display:flex; font-size: 4em; align-items: center;"><%= artist.name%></h1>
    </div>

    <div class="ui container">
      <div class="row">
        <div class="col-sm-1 col-md-1 col-lg-1 text-center">#</div>
        <div class="col-sm-1 col-md-1 col-lg-1 text-center">Liked</div>
        <div class="col-sm-8 col-md-8 col-lg-8">Title</div>
        <div class="col-sm-1 col-md-1 col-lg-1"><i class="far fa-clock"></i></div>
        <div class="col-sm-1 col-md-1 col-lg-1">Options</div>
      </div>

      <% songs.forEach(function(song, index) { %>
      <div class="row" style="border-top: 1px solid grey; border-bottom: 1px solid grey; padding: 0.5em 0">
        <div class="col-sm-1 col-md-1 col-lg-1 text-center"><%= index + 1 %></div>
        <div class="col-sm-1 col-md-1 col-lg-1 text-center"><i class="far fa-heart"></i></div>
        <div class="col-sm-8 col-md-8 col-lg-8"><%= song.name %></div>
        <div class="col-sm-1 col-md-1 col-lg-1">3:30</div>
        <div class="col-sm-1 col-md-1 col-lg-1 text-center"><i class="fas fa-ellipsis-h"></i></div>
      </div>
      <% }) %>
    </div>
  </div>






</div>