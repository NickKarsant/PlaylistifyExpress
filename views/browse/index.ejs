<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-xs-2 col-sm-2 col-md-3 col-lg-2" style="padding: 0; width:auto;height:auto; border: 1px solid red;">
    <div>
      <ul class="aside">
        <li>
          <% if(currentUser) {%>
          <a id="home" href="/playlists"><span><i class="fas fa-home"></i></span>Home</a>
          <%} else {%>
            <a id="browse" href="/browse"><span><i class="fas fa-eye"></i></span>Browse</a>

          <%}%>
        </li>
        <li>
          <a href="">
            two
          </a>
        </li>
        <li>
          <a href="">
            three
          </a>
        </li>
      </ul>

      <ul class="aside">
        <h7>PLAYLISTS</h7>

        <li>
            <i id="sideAdd" class="fas fa-plus-square add"></i> <a class="btn btn-sm " href="/playlists/new">Create Playlist </a>
        </li>
      </ul>
    </div>
  </div>

  <div class="col-xs-10 col-sm-10 col-md-9 col-lg-10" style="height:auto;border: 1px solid red;">
    <div>
      <% if (!currentUser) {%>
          <header class="jumbotron">
            <h1><i class="fas fa-music"></i> Welcome to Playlist-ify</h1>
            <p>Search through our database of music for the right songs and artists and become a playlist god! <br>
              Feel free to browse our database of music, playlists, and artist. <br>
              Register/Login to listen to music or create your own playlists.</p>
            <%}%>

        <p>

          <!-- if not logged in MyPlaylists isnt displayed -->
          <% if (currentUser) {%>
            <a class="btn btn-lg btn-primary" href="/playlists">MyPlaylists</a>
            <%}%>
        </p>
          <form>
      
            <div class="input-group p-1">
              <input type="search" placeholder="Search for artists or songs" aria-describedby="button-addon3"
                class="form-control bg-none border-0">
            </div>
      
          </form>
        </header>
    </div>
          
      <!-- PLAYLISTS -->
    <div id="playlists" class="ui container mb-5">
      <h1 class="mt-5 mb-5">Playlists</h1>
      <div class="ui grid mb-3 row text-center">
        <% allPlaylists.forEach(function(playlist) {%>
            <div class="card col-xs-6 col-sm-4 col-md-3 col-lg-3 mb-2">

              <div class="thumbnail">
                <div class="preview">
                  <img style="max-width:150px; height:150px" class="img-thumbnail card-fluid glimpse"
                    src="<%=playlist.image%>" alt="">
                </div>

                <div class="card-body">
                  <div class="caption">
                    <h5 class="card-title mb-2"> <%= playlist.name %> </h5>
                  </div>
                  <p class="more">

                    <a class="button" href="/playlists/<%= playlist._id %>"><button class="btn btn-primary">View
                        Playlist</button></a>

                  </p>
                </div>
              </div>

            </div>

            <%});%>
    </div>
  </div>

  <!-- SONGS -->
  <div id="songs" class="ui container">
    <h1 class="mb-5">Songs</h1>
    <div class="ui grid mb-3 row text-center">
      <% allSongs.forEach(function(song) {%>
      <div id="songs" class="card col-xs-6 col-sm-5 col-md-3 col-lg-3 mb-3">

        <div class="thumbnail">
          <% if (song.image) {%>
          <img class="img-thumbnail card-fluid" src="<%=song.image%>" alt="">
          <% } else {%>
          <img class="img-thumbnail card-fluid" src="https://via.placeholder.com/150" alt="">
          <%}%>
          </div>
          
          <div class="card-body">
            <div class="caption">
              <h8 class="card-title"> <strong><%= song.name %></strong> </h8>
          <p class="card-content"> <%= song.artist %></p>
          <!-- <p class="card-content"> Song ID: <%= song.id %></p> -->

          <div class="row">

            <% if (currentUser) {%>

            <i class="col-4 fas fa-heart like">
              <form action="/playlists/<%= currentUser.playlists[0]._id %>" method="PATCH"></form>
            </i>


            <i class="col-4 fas fa-plus-square add">
              <form action="" method="PATCH"></form>
            </i>



            <div class="col-4">
              <i id="play" class="btn btn-md btn-success fas fa-play"></i>
            </div>

            <%}%>
              </div>
          
          
            </div>
          </div>
      
        </div>
          
          
        <%});%>
          </div>
        </div>

        <!-- ARTISTS -->
        <div id="artists" class="ui container mb-5">
          <h1 class="mt-5 mb-5">Artists</h1>
          <div class="ui grid mb-3 row text-center">
            <% allArtists.forEach(function(artist) {%>
            <div id="artists" class="card col-xs-6 col-sm-4 col-md-3 col-lg-3 mb-2">

              <div class="thumbnail">
                <div class="preview">
                  <% if (artist.image) {%>
                  <img style="max-width:150px; height:150px" class="img-thumbnail card-fluid" src="<%=artist.image%>"
                    alt="">
                  <% } else {%>
                  <img class="img-thumbnail card-fluid" src="https://via.placeholder.com/200" alt="">
                  <%}%>
                          </div>
                          <div class="card-body">
                            <div class="caption">
                              <h5 class="card-title mb-2"> <strong><%= artist.name %> </strong></h5>
                </div>
                <p class="more">

                  <a class="button" href=""><button class="btn btn-primary"> Discography</button></a>

                </p>
              </div>
            </div>

          </div>


          <%});%>
        </div>

      </div>
    </div>
  </div>