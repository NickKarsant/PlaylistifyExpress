<% layout('layouts/boilerplate') %>

<div class="row">
  <%- include('../partials/aside') %>



  <div class="col-xs-10 col-sm-10 col-md-9 col-lg-10 ">
    
  


    <div class="row align-items-center">
        <div class="col-md-2" >
          <a class="btn mb-3 mt-2 backAndNext text-white" onclick="goBack()"><i class="fas fa-chevron-left"></i></a>
          <a id="forward" class="btn mb-3 mx-3 mt-2 backAndNext" onclick="goForward()"><i id="forward" class="fas fa-chevron-right"></i></a>
        </div>
  
        <div class="col-md-10">
          <form action="/search?" id=searchBarForm >
            <input id="searchBar" autofocus type="search" placeholder="Search for artists or songs"
              aria-describedby="button-addon3" class="form-control bg-none border-1">
          </form>
        </div>
      </div>

    <div>
      <% if (!currentUser) {%>
      <header class="jumbotron text-white" style="margin-left: -15px !important; width: 104%; background-color: rgb(34, 33, 33);
      ">
        <h1><i class="fas fa-music"></i> Welcome to Playlist-ify</h1>
        <p>Search through our database of music for the right songs and artists and become a playlist god! <br>
          Feel free to browse our database of music, playlists, and artists. <br>
          Register or Login to listen to music or create your own playlists.</p>
        <%}%>
        </header>
    </div>

  
      <% if (currentUser) {%>
        <!-- show uniquely yours playlists and then below that ALL playlists -->

        <div class="ui container mb-5">
          <h1 class="text-white">Uniquely Yours</h1>

          = <div id="uniqueGrid" class="ui grid mb-3 row text-center">
            <% usersPlaylists.forEach(function(playlist) {%>
            <a class="usersPlaylists bg-dark card col-xs-2 col-sm-3 col-md-3 col-lg-2 col-xl-2 my-3 mx-4 pt-2"
              href="/playlists/<%= playlist._id %>">
              <% if (playlist.image.length > 30) {%>
              <img class="card-img-top img-thumbnail card-fluid glimpse" style="max-height:100px;"
                src="<%=playlist.image%>" alt="">
              <% }else { %>
              <img class="card-img-top img-thumbnail card-fluid glimpse" src="https://via.placeholder.com/100" alt="">
              <%}%>
                          <div class="card-body p-0 text-white">
                  <h4 class="card-title"></h4> <%= playlist.name %> </h4>
          </div>

          </a>

          <%});%>
        </div>
    </div>


    <%}%>




  <!-- PLAYLISTS -->

  <!-- ALL Playlists -->
  <div class="ui container mb-5">
      <h1 class="text-white mb-5">Playlists</h1>
      <div class="ui grid mb-3 row text-center">
          <% removedLiked.forEach(function(playlist) {%>
    <a class="usersPlaylists bg-dark card col-xs-2 col-sm-3 col-md-3 col-lg-2 col-xl-2 my-3 mx-4 pt-2"
      href="/playlists/<%= playlist._id %>">
      <% if (playlist.image.length > 30) {%>
      <img class="card-img-top img-thumbnail card-fluid glimpse" style="max-height:100px;" src="<%=playlist.image%>"
        alt="">
      <% }else { %>
      <img class="card-img-top img-thumbnail card-fluid glimpse" src="https://via.placeholder.com/100" alt="">
      <%}%>
          <div class="card-body p-0 text-white">
            <h4 class="card-title"> <%= playlist.name %> </h4>
  </div>

  </a>

  <%});%>
</div>
</div>


<!-- SONGS -->
<div id="songs" class="ui container">
  <h1 class="text-white mb-5">Songs</h1>
  <div class="ui grid mb-3 row">
    <% allSongs.forEach(function(song) {%>
    <div id="songs" class=" bg-dark card col-xs-6 col-sm-5 col-md-4 col-lg-3 col-xl-2 m-3 pt-2">


      <!-- <div class="thumbnail"> -->

      <div class="text-center" style="overflow: hidden;" class="preview">
        <% if (song.image) {%>
        <img class="card-img-top img-thumbnail card-fluid glimpse" src="<%=song.image%>" alt="">
        <% } else {%>
        <img class="card-img-top img-thumbnail card-fluid"
          src="data:image/png;base64,"
          alt="">
        <%}%>
    </div>
          
    <div class="card-body p-0 text-white">
      <div class="caption">
          <% if (currentUser) {%>
        <!-- Logged in -->
        <h8 class="card-title"><%= song.name %></h8>
        <p class="content"> <%= song.artist %></p>
      </div>
      <!-- <p class="card-content"> Song ID: <%= song.id %></p> -->

      <div class="row d-flex justify-content-around m-1">
        <i class="far fa-heart like">
          <form action="/playlists/<%= currentUser.playlists[0]._id %>" method="PATCH"></form>
        </i>

        <i class="fas fa-plus-square add" type="button" data-toggle="modal" data-target="#playlistChoices">
        </i>
        <!-- <i class="fas fa-ellipsis-h options btn btn-xs" style="margin-left:-1.5em;" ></i> -->

        <div class="">
          <i id="play" class="btn btn-md btn-success fas fa-play"></i>
        </div>

        <!-- NOT Logged in -->
        <%} else {%>

        <div class="caption" style="width:65%; float:left;">
          <h8 class="card-title"><%= song.name %></h8>
          <p class="content"> <%= song.artist %></p>
        </div>
        <div class="playbtn text-center" style="margin-top: 9%;">
          <i id="songsPlay" class="btn btn-md btn-success fas fa-play"></i>
        </div>
        <% }%>
      </div>
    </div>

  </div>


  <%});%>
</div>
</div>



<!-- playlistChoices modal -->
<div class="modal center fade" id="playlistChoices" tabindex="-1" role="dialog"
  aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style="width: 50%;">
      <div class="modal-header">
        Add to:
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <ul style="list-style-type: none; padding:0; margin:0 1em;">
          <% usersPlaylists.forEach(function(playlist) {%>
          <li class="modalPlaylistList row optionsChoice btn d-flex justify-content-left" type="button"
            data-toggle="modal">
            <p>
              <%= playlist.name %>
              <!-- <%= playlist._id %> -->
            </p>
          </li>
          <%})%>
        </ul>
      </div>
    </div>
  </div>
</div>




<!-- ARTISTS -->
<div class="ui container mb-5">
  <h1 class="text-white mb-5">Artists</h1>
  <div class="ui grid mb-3 row text-center">
    <% allArtists.forEach(function(artist) {%>
    <a class="bg-dark card col-xs-2 col-sm-6 col-md-3 col-lg-2 col-xl-2 mb-2 mx-4 pt-2"
      href="/artist/<%= artist._id %>">
      <% if (artist.image.length > 30) {%>
      <img class="card-img-top img-thumbnail card-fluid glimpse" style="max-height:100px;" src="<%=artist.image%>"
        alt="">
      <% }else { %>
      <img class="card-img-top img-thumbnail card-fluid glimpse" src="https://via.placeholder.com/100" alt="">
      <%}%>
        <div class="card-body p-0 text-white">
          <h4 class="card-title"> <%= artist.name %> </h4>
  </div>

  </a>

  <%});%>
</div>
</div>


</div>
</div>