    <ul class="aside pt-3">
      <h4 id="list">PLAYLISTS</h4>
      
      <div id="createPlaylist">
        <a id="sideAddLink" class="btn btn-sm text-white" href="/playlists/new">
          <i style="float: left;" id="sideAdd" class="far fa-plus-square"></i>
          <p id="sideAddWord"> New Playlist</p>
        </a>
      </div>

      <% if(currentUser) {%>
      <div class="scrollable scrollbar thin">
        <% usersPlaylists.forEach(function(playlist) {%>
        <li class="sidePlaylist">
          <a class="sidePlaylistLink btn btn-sm text-white px-0 mx-0" href="/playlists/<%=playlist._id%>">
            <div class="col-xs-9 col-sm-9 col-md-9 col-lg-9   sidePlaylistWord">
              <p class="word px-2"><%= playlist.name %></p>
            </div>
          </a>
        </li>
        <%})%>
      </div>
      <%}%>
    </ul>
  </div>