<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-xs-2 col-sm-2 col-md-3 col-lg-2" style="padding: 0; width:auto;height:auto; border: 1px solid red;">
      ppplaceholder
    </div>

   
  <div class="col-xs-10 col-sm-10 col-md-9 col-lg-10" style="height:auto;border: 1px solid red;">
    <!-- list of all your playlists -->
    <h1 class="mb-3">My Playlists</h1>
    <a class="btn btn-lg btn-primary mb-5" href="/playlists/new">Create a New Playlist </a>
    <div class="ui container">
      <div class="ui grid mb-3">
        <% for(let playlist of usersPlaylists) {%>
        <div class="card col-xs-6 col-sm-4 col-md-3 col-lg-3 mb-2 pb-3">
          <a class="playlists" href="/playlists/<%= playlist._id %>">

            <h2 class="text-center mt-1"><%= playlist.name%> </h2>
            <img class="img-responsive rounded" src="<%= playlist.image%>" alt="">

          </a>
        </div>
        <%}%> 
  </div>
</div>

<br><br><br>
<h6>songs to look through</h6>
</div>

</div>