<% layout('layouts/boilerplate') %>
<div class="row">
  <%- include('../partials/aside') %>

  <div class="col-xs-10 col-sm-10 col-md-9 col-lg-10" style="height:100vh;">

    <br/>
    <div class="top ui stackable center aligned page grid container">
      <div class="column 12 wide card shadow mt-5">
        <h2 style="text-align:center">Create a New Playlist</h2>
        <div class="form" style="width: 40%; margin: 25px auto;">

          <form action="/playlists" method="POST">

            <div class="form-group">
              <label style="display:flex" class="ui left floated" for="name">Playlist Title</label>
              <input class="form-control" type="text" autofocus placeholder="Name" id="name" name="name">
            </div>

            <div class="form-group">
              <label style="display:flex" class="ui left floated" for="image">Playlist Image</label>
              <input class="form-control" type="text" placeholder="Image url" id="image" name="image">
            </div>

            <div class="form-group">
              <button class="btn btn-lg btn-success btn-block">Create</button>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</div>