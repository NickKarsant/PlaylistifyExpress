<% layout('layouts/boilerplate') %>
<div class="row">
  <%- include('../partials/aside') %>

  <div class="main col-xs-10 col-sm-10 col-md-9 col-lg-10" style="height:100vh;">
    <a class="btn mb-2 mt-2 backAndNext text-white" style="height: 32px;
    width: 32px;
    border-radius: 50%;
    background-color: green;
    color: #fff;" alt="Go back" onclick="goBack()"><i class="fas fa-chevron-left"></i></a>
    <a class="btn mb-2 mx-3 mt-2 backAndNext" style="height: 32px;
    width: 32px;
    border-radius: 50%;
    background-color: green;
    color: #fff;" alt="Go forward" onclick="goForward()"><i class="fas fa-chevron-right"></i></a>


    <br />
    <div class="top ui stackable center aligned page grid container">
      <div class="column 12 wide card shadow mt-5">
        <h2 style="text-align:center">Create a New Playlist</h2>
        <div class="form" style="width: 40%; margin: 25px auto;">

          <form action="/playlists" method="POST">

            <div class="form-group">
              <label style="display:flex" class="ui left floated" for="name">Playlist Title</label>
              <input class="form-control" type="text" autofocus placeholder="Name" id="name" name="name">
            </div>

            <div class="form-group">
              <label style="display:flex" class="ui left floated" for="image">Playlist Image</label>
              <input class="form-control" type="text" placeholder="Image url" id="imageURL" name="image">
            </div>

            <div class="form-group">
              <button class="btn btn-lg btn-success btn-block">Create</button>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</div>